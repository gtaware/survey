<!DOCTYPE html>  
<html>  
    <head>  
        <title>{% block title %}Owl Survey{% endblock %}  </title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">  
        <!-- Bootstrap -->  

        {% block stylesheets %}  
            <link href="{{ asset('bundles/ceissurveyusers/css/bootstrap.css') }}" type="text/css" rel="stylesheet">  
            {% stylesheets '@bootstrap_less' combine=true %}  
            <link href="{{ asset_url }}" type="text/css" rel="stylesheet">  
            {% endstylesheets %}  
        {% endblock %}  
    </head>  

    <body>
         <div class="container">
            <div class="row well">
       <div align="right">
            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |
                <a href="{{ path('fos_user_security_logout') }}">
                    {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                </a>
            {% else %}
                <a href="{{ path('fos_user_security_login') }}">{{'layout.login'|trans({}, 'FOSUserBundle') }}</a> 
            {% endif %}
        </div>

        {% for type, messages in app.session.flashbag.all() %}
            {% for message in messages %}
                <div class="flash-{{ type }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
        
        <br><br>
       
                {% block body %}
                    

                    <div class="header">
                        <nav>
                            <ul class="nav nav-pills pull-left">
                                <li role="utilisateur" class="active"><a href="#">Utilisateur</a></li>
                                <li role="questionnaire"><a href="#">Questionnaire</a></li>
                            </ul>
                        </nav>
                        <br><br><br><br>
                    </div>

                    {% block form %}  {% endblock %} 
                    
                {% endblock %}  
            </div>
        </div>
        {% block javascripts %}  
            {% javascripts '@jquery_js' '@bootstrap_js' filter='?yui_js' combine=true %}  
            <script src="{{ asset_url }}"></script>  
            {% endjavascripts %}  
        {% endblock %}  
    </body>  
</html> 